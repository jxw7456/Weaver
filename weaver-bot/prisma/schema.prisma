generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          Int       @id @default(autoincrement())
  userId      String
  channelId   String    @unique
  guildId     String
  subject     String
  category    String
  status      String    @default("open")
  assignedTo  String?
  createdAt   DateTime  @default(now())
  closedAt    DateTime?
  escalatedAt DateTime? // NEW: Track when ticket was escalated
  aiResponded Boolean   @default(false) // NEW: Track if AI sent initial response
  
  messages    Message[]
  feedback    Feedback?
}

model Message {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  authorId  String
  content   String
  isAI      Boolean  @default(false) // NEW: Track AI-generated messages
  createdAt DateTime @default(now())
  
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  ticketId  Int      @unique
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}

model FAQ {
  id         Int      @id @default(autoincrement())
  question   String
  answer     String   @db.Text
  category   String
  keywords   String[] // Array for search functionality
  views      Int      @default(0)
  helpful    Int      @default(0)
  notHelpful Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}