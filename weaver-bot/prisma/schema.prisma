generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          Int       @id @default(autoincrement())
  userId      String
  channelId   String    @unique
  guildId     String
  subject     String    @db.VarChar(200)
  category    String    @db.VarChar(50)
  status      String    @default("open") @db.VarChar(20)
  assignedTo  String?
  createdAt   DateTime  @default(now())
  closedAt    DateTime?
  escalatedAt DateTime?
  aiResponded Boolean   @default(false)
  
  // New tracking fields
  tracked     Boolean   @default(false)
  trackedAt   DateTime?
  trackedBy   String?
  trackingNotes String? @db.VarChar(500)
  notionPageId String?  // For future Notion integration
  
  messages    Message[]
  feedback    Feedback?
}

model Message {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  authorId  String
  content   String   @db.Text 
  isAI      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  ticketId  Int      @unique
  rating    Int
  comment   String?  @db.VarChar(1000)
  createdAt DateTime @default(now())
  
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}

model FAQ {
  id         Int      @id @default(autoincrement())
  question   String   @db.VarChar(500)
  answer     String   @db.Text
  category   String   @db.VarChar(50)
  keywords   String[] 
  views      Int      @default(0)
  helpful    Int      @default(0)
  notHelpful Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// New model for tracked tickets queue
model TrackedTicket {
  id          Int      @id @default(autoincrement())
  ticketId    Int      @unique
  rating      Int
  priority    String   @default("normal") @db.VarChar(10) // low, normal, high, urgent
  status      String   @default("pending") @db.VarChar(20) // pending, in_review, resolved, exported
  notes       String?  @db.VarChar(1000)
  trackedBy   String
  reviewedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  exportedAt  DateTime? // When exported to Notion
  notionPageId String?  // Notion page ID once exported
}